{
  "name": "composite-weak-map",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm run -s demo",
    "build": "npm run -s clean && npm run -s build-lib",
    "build-lib": "tsc -p tsconfig.lib.json",
    "demo": "npm run -s build-demo && npm run -s serve",
    "build-demo": "npm run -s clean && npm run -s build-lib && npm run -s copy-html",
    "copy-html": "cp src/index.html dist/index.html",
    "serve": "http-server dist/",
    "test": "npm run -s clean && npm run -s build-tests && npm run -s run-tests",
    "build-tests": "tsc -p tsconfig.test.json",
    "run-tests": "node --test --test-reporter=spec dist/**.test.js",
    "clean": "rm -rf dist/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dgp1130/composite-weak-map.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.4",
    "http-server": "^14.1.1",
    "typescript": "^5.3.2"
  }
}
