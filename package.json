    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@web/test-runner-puppeteer": "^0.15.0",
    "typescript": "^5.3.2"
  }
